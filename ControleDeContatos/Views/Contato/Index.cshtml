@model List<ContatoModel>
@{

    ViewData["Title"] = "Listagem Contatos";
}

<div class="text-center">
    <div class="d-flex justify-content-end align-content-center">
        <a class="btn btn-outline-primary d-flex align-items-center" role="button" asp-controller="Contato" asp-action="Criar"><i class="bi bi-person-fill-add mr-2" style="font-size: 26px"></i> Adicionar contato</a>
    </div>

    <h1 class="display-4 pb-3">Listagem de contatos</h1>

    <table class="table table-striped progress-bar-striped table-bordered pt-2">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col" width="100">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Telefone</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Botões ações">
                                <a role="button" asp-route-id="@contato.Id" class="btn btn-primary" asp-controller="Contato" asp-action="Editar"><i class="bi bi-pencil-fill text-white"></i></a>
                                <a role="button" asp-route-id="@contato.Id" class="btn btn-danger" asp-controller="Contato" asp-action="ApagarConfirmacao"><i class="bi bi-trash3-fill text-white"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>